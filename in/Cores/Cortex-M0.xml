<?xml version="1.0"?>
<core_definition
    xmlns="http://www.arm.com/core_definition"
    xmlns:cr="http://www.arm.com/core_reg"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:tcf="http://com.arm.targetconfigurationeditor"
    xsi:schemaLocation="http://www.arm.com/core_definition ../Schemas/core_definition.xsd"
    architecture="ARMv6M">

    <name>Cortex-M0</name>
    <internal_name>Cortex-M0</internal_name>
    <series>M</series>

    <cr:register_list name="Core" display_by_default="true">
        <xi:include href="Registers/core_registers_m0.xml" xpointer="xmlns(reg_group=http://www.arm.com/core_reg)xpointer(//reg_group:register)"/>
        <!-- Enumerations -->
        <xi:include href="Registers/core_registers_m0.xml" xpointer="xmlns(tcf=http://com.arm.targetconfigurationeditor)xpointer(//tcf:enumeration)"/>
    </cr:register_list>

    <cr:register_list name="System">
        <xi:include href="Registers/system_registers_m0.xml" xpointer="xmlns(reg_group=http://www.arm.com/core_reg)xpointer(//reg_group:peripheral)"/>
        <xi:include href="Registers/nvic_registers_v6m.xml" xpointer="xmlns(reg_group=http://www.arm.com/core_reg)xpointer(//reg_group:peripheral)"/>
        <!-- Enumerations -->
        <xi:include href="Registers/system_registers_m0.xml" xpointer="xmlns(tcf=http://com.arm.targetconfigurationeditor)xpointer(//tcf:enumeration)"/>
    </cr:register_list>
</core_definition>
